{
  "name": "realguardio-bff",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev-wait": "(next dev &) ; npx wait-on@8.0.3 --timeout 10s http://localhost:3000",
    "build": "next build --no-lint",
    "start": "next start",
    "lint": "next lint",
    "unit-test": "jest --selectProjects unit",
    "e2e-test": "jest --selectProjects e2e",
    "test": "jest --selectProjects unit,e2e",
    "all-test": "npm run unit-test && npm run e2e-test",
    "mock-server": "nodemon --watch '.' --exec 'ts-node --transpile-only --project tsconfig.node.json' mock-server/mockServerMain.ts",
    "dev-with-mock": "START_MOCK_SERVER=true SECURITY_SYSTEMS_API_URL=http://localhost:3001 next dev"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/api-logs": "^0.57.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/next-auth": "^3.15.0",
    "@vercel/otel": "^1.13.0",
    "axios": "^1.10.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "next": "15.2.2",
    "next-auth": "^4.24.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@swc/jest": "^0.2.37",
    "@tailwindcss/postcss": "^4.1.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "cors": "^2.8.5",
    "eslint": "^9",
    "eslint-config-next": "15.2.2",
    "express": "^4.18.2",
    "nodemon": "^3.1.10",
    "puppeteer": "^24.4.0",
    "tailwindcss": "^4.1.10",
    "typescript": "^5",
    "ts-node": "^10.9.2"
  }
}
